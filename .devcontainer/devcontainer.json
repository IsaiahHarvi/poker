// For Linux or WSL 
// can integrate with github if '.github-token' is located at home dir
{
    "name": "Python 3: Poker",
    "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bookworm",
    "features": {
      "ghcr.io/devcontainers/features/git:1": {},
      "ghcr.io/devcontainers/features/git-lfs:1": {
        "autoPull": false
      },
      "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "mounts": [
      "source=${localEnv:HOME}/.github-token,target=/home/vscode/.github-token,type=bind,consistency=cached"
    ],
    "postCreateCommand": ".devcontainer/setup_devcontainer.sh"
  }
  